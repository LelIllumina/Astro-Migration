---
import Header from "@components/Header.astro";
import Base from "@layouts/Base.astro";
import FanButt from "@components/FanButt.astro";
---

<Base
  title="Lel@Nekoweb"
  description="All Nekos are mine."
  keywords={["Nekoweb", "Lel", "Blog", "Personal"]}
  image="images/background.jpg"
>
  <Header />
  <main>
    <article>
      <section>
        <h1 title="Lel@NekoWEB" id="Lel-nekoweb">Lel@NekoWEB</h1>
        <div id="subtext"><p>Welcome to lel.nekoweb.org</p></div>
        <FanButt href="/main/"
          >D-Dont click me too hard.. &GreaterGreater;w&LessLess;
        </FanButt>
      </section>
      <section></section>
    </article>
  </main>
</Base>

<style>
  body {
    overflow-x: hidden;

    max-width: 100vw;
    min-height: 100vh;
    margin: 0 auto;
    padding: 2% 5%;

    background: var(--night) center/cover no-repeat
      url(/src/assets/images/background.jpg);
  }

  section {
    border: none;
  }

  h1 {
    width: 80vw;
    max-width: 50rem;
    margin: 2rem auto;

    font-family: Archoblast, fantasy;
    font-size: 10rem;
    font-feature-settings:
      "liga" 1,
      "clig" 1,
      "dlig" 1,
      "ss01" 1,
      "ss02" 1;
    color: var(--tan);
    text-shadow: 2px 2px #adff2f;

    mix-blend-mode: color-dodge;
  }
  h2 {
    font-family: "Amplitude", Cochin, Georgia, Times, "Times New Roman", serif;
    text-align: center;
  }

  #subtext p {
    margin: 1vh auto;

    font-family: Gunsan, sans-serif;
    font-size: 1.5rem;
    color: var(--gray-400);
    text-align: center;

    mix-blend-mode: hard-light;
  }
</style>
