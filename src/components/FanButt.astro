  /* CSS */
  a {
    align-content: center;
    background-image: radial-gradient(
      100% 100% at 100% 0,
      var(--red-400) 0%,
      var(--red-500) 100%
    );
    border: 0;
    border-radius: 10% / 100%;
    box-shadow:
      rgba(45, 35, 66, 0.4) 0 2px 4px,
      rgba(45, 35, 66, 0.3) 0 7px 13px -3px,
      rgba(58, 65, 111, 0.5) 0 -3px 0 inset;
    display: block;
    margin: 8rem auto 0 auto;
    font-family: "Amplitude";
    height: 6rem;
    width: fit-content;
    padding: 0 32px;
    text-align: center;
    text-decoration: none;
    transition:
      box-shadow 0.15s,
      transform 0.15s;
    font-size: 2rem;
    font-size-adjust: 0.48;
    line-height: 1.75;
    mix-blend-mode: hard-light;
    color: var(--gray-300);
  }

  a:focus {
    box-shadow:
      var(--red-400) 0 0 0 1.5px inset,
      rgba(45, 35, 66, 0.4) 0 2px 4px,
      rgba(45, 35, 66, 0.3) 0 7px 13px -3px,
      var(--red-400) 0 -3px 0 inset;
  }

  a:hover {
    box-shadow:
      rgba(45, 35, 66, 0.4) 0 4px 8px,
      rgba(45, 35, 66, 0.3) 0 7px 13px -3px,
      var(--red-400) 0 -3px 0 inset;
    transform: translateY(-2px);
  }

  a:active {
    box-shadow: var(--red-400) 0 3px 7px inset;
    transform: translateY(2px);
  }
</style>
