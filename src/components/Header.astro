---
const currentUrl = Astro.url.pathname;

interface Link {
  label: string;
  url?: string;
  children?: Link[];
}

const links: Link[] = [
  { label: "Main", url: "/" },
  { label: "About", url: "/about/" },
  { label: "Blogs", url: "/blogs/" },
  { label: "Guides", url: "/guides/" },
  {
    label: "Projects ▼",
    children: [
      { label: "eroWeb", url: "/eroWeb/" },
      {
        label: "NekoTemp",
        url: "https://github.com/LelIllumina/Astro-Template/",
      },
      { label: "NekoFM", url: "https://lelillumina.github.io/nekofm/" },
    ],
  },
  {
    label: "Site ▼",
    children: [
      { label: "RSS", url: "/rss.xml" },
      { label: "Atom", url: "/atom.xml" },
      { label: "Guestbook", url: "https://lel.atabook.org" },
    ],
  },
];
---

<header>
  <nav>
    {
      links.map((link) => (
        <div class="nav-item">
          {link.url ? (
            <a
              href={link.url}
              aria-current={currentUrl === link.url ? "page" : undefined}
            >
              {link.label}
            </a>
          ) : (
            <span class="nav-label">{link.label}</span>
          )}

          {link.children && (
            <div class="dropdown">
              {link.children.map((child) => (
                <a
                  href={child.url}
                  aria-current={currentUrl === child.url ? "page" : undefined}
                >
                  {child.label}
                </a>
              ))}
            </div>
          )}
        </div>
      ))
    }
  </nav>

  <div id="navbar-handle">⌄</div>
</header>

<style>
  #navbar-handle {
    position: fixed;
    top: 0;
    left: 50%;
    transform: translateX(-50%);

    font-size: 1.2rem;
    color: #ccc;

    opacity: 0.7;

    transition: 0.2s;
  }

  #navbar-handle:hover {
    cursor: pointer;
    opacity: 1;
  }

  nav {
    z-index: 2;
    transform: translateY(-100px);

    display: flex;
    justify-content: space-between;

    width: max(500px, 90vw);
    margin: 15px auto auto;

    opacity: 0;

    transition: 0.2s;
    transition-delay: 0s;

    a,
    span {
      cursor: pointer;

      display: inline-block;

      padding: 1em 0;
      padding-bottom: 1px;

      font-family: var(--font-accent);
      font-weight: 500;
      color: var(--gray-100);
      text-decoration: none;
      text-shadow: 1px 1px var(--raisin-black);

      &[aria-current] {
        color: var(--purple-400);
      }
    }

    .nav-item {
      position: relative;
      display: inline-block;

      a,
      .nav-label {
        display: inline-block;

        padding: 1em 0 1px;

        font-family: var(--font-accent);
        font-weight: 500;
        text-decoration: none;
        text-shadow: 1px 1px var(--raisin-black);
      }

      a[aria-current] {
        color: var(--purple-400);
      }

      .dropdown {
        position: absolute;
        top: 100%;
        left: 50%;
        transform: translateX(-50%);

        display: none;
        flex-direction: column;

        animation: dropdown 0.2s ease;
      }

      &:hover .dropdown {
        display: flex;
      }

      .dropdown a {
        height: 30px;
        padding: 0.5em 0;
        color: var(--gray-100);
        text-decoration: none;
      }

      .dropdown a[aria-current] {
        color: var(--purple-400);
      }
    }
  }

  header {
    position: fixed;
    top: 10px;
    width: 90vw;
  }

  header:hover {
    nav {
      transform: translateY(0);
      opacity: 1;
      transition-delay: 0s;
    }

    #navbar-handle {
      transform: translateX(-50%) translateY(75px);
    }
  }

  header:not(:hover) {
    nav,
    #navbar-handle {
      transition-delay: 0.2s;
    }
  }

  @keyframes dropdown {
    from {
      transform: translateX(-50%) translateY(-10px);
      opacity: 0;
    }

    to {
      transform: translateX(-50%) translateY(0);
      opacity: 1;
    }
  }
</style>
