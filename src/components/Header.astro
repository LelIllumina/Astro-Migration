---
const currentUrl = Astro.url.pathname;

interface Link {
  label: string;
  url: string;
}

const links: Link[] = [
  { label: "Main", url: "/" },
  { label: "About", url: "/about/" },
  { label: "Blogs", url: "/blogs/" },
  { label: "Guides", url: "/guides/" },
  { label: "eroWeb", url: "/eroWeb/" },
  { label: "Guestbook", url: "https://lel.atabook.org" },
];
---

<header>
  <nav>
    {
      links.map((link) => (
        <a
          href={link.url}
          aria-current={currentUrl === link.url ? "page" : undefined}
        >
          {link.label}
        </a>
      ))
    }
  </nav>
  <div id="navbar-handle">âŒ„</div>
</header>

<style>
  #navbar-handle {
    position: fixed;
    top: 0;
    left: 50%;
    transform: translateX(-50%);

    font-size: 1.2rem;
    color: #ccc;

    opacity: 0.7;

    transition: 0.2s;
  }

  #navbar-handle:hover {
    cursor: pointer;
    opacity: 1;
  }

  nav {
    transform: translateY(-100px);

    display: flex;
    justify-content: space-between;

    width: max(500px, 90vw);
    margin: 15px auto auto;

    opacity: 0;

    transition: 0.2s;
    transition-delay: 0s;

    a {
      display: inline-block;

      padding: 1em 0;
      padding-bottom: 1px;

      font-family: var(--font-accent);
      font-weight: 500;
      color: var(--gray-100);
      text-decoration: none;
      text-shadow: 1px 1px var(--raisin-black);

      &[aria-current] {
        color: var(--purple-400);
      }
    }
  }

  header {
    position: fixed;
    top: 10px;
    width: 90vw;
  }

  header:hover {
    nav {
      transform: translateY(0);
      opacity: 1;
      transition-delay: 0s;
    }

    #navbar-handle {
      transform: translateX(-50%) translateY(75px);
    }
  }

  header:not(:hover) {
    nav,
    #navbar-handle {
      transition-delay: 0.2s;
    }
  }
</style>
